// ---------- schema.prisma ----------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ChainKind {
  # EVM uyumlu zincirler
  ETHEREUM
  BSC          # Binance Smart Chain
  POLYGON
  ARBITRUM
  OPTIMISM
  BASE
  AVALANCHE
  FANTOM
  GNOSIS
  CRONOS

  # Non-EVM ama büyük ekosistemler
  SOLANA
  TRON
  TON
  NEAR
  COSMOS
  SUI
  APTOS
  STARKNET

  # Bitcoin tabanlı
  BITCOIN
  DOGE
  LITECOIN

  # Stablecoin / wrapped mantığı için generic
  NATIVE       # zincirin kendi coini (ETH, BNB, MATIC vs.)
  OTHER        # listede olmayan zincirler için fallback
}

model Coin {
  id        String   @id @default(uuid())
  chainKind ChainKind
  chainId   Int?
  address   String?
  slug      String   @unique
  symbol    String
  name      String
  logoURI   String?
  sources   String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ilişkiler
  votes     DailyVote[]

  @@index([symbol])
  @@index([name])
  @@unique([chainId, address])
}

model DailyVote {
  id        String   @id @default(uuid())
  coinId    String
  dateYmd   String   // YYYY-MM-DD (Europe/Istanbul)
  votes     Int      @default(0)
  coin      Coin     @relation(fields: [coinId], references: [id])
  createdAt DateTime @default(now())

  @@unique([coinId, dateYmd])
  @@index([dateYmd])
}
