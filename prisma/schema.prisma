// ---------- prisma/schema.prisma ----------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ChainKind {
  ETHEREUM
  BSC
  POLYGON
  ARBITRUM
  OPTIMISM
  BASE
  AVALANCHE
  FANTOM
  GNOSIS
  CRONOS
  SOLANA
  TRON
  TON
  NEAR
  COSMOS
  SUI
  APTOS
  STARKNET
  BITCOIN
  DOGE
  LITECOIN
  NATIVE
  OTHER
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model Coin {
  id        String   @id @default(uuid())
  chainKind ChainKind
  chainId   Int?
  address   String?           // manuel eklemeler için opsiyonel
  slug      String   @unique  // UI için benzersiz slug
  symbol    String
  name      String
  logoURI   String?
  sources   String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  votes     DailyVote[]

  @@index([symbol])
  @@index([name])
  @@index([chainKind])
  @@index([address])
  @@unique([chainKind, address]) // address NULL değilse benzersiz
}

model DailyVote {
  id        String   @id @default(uuid())
  coinId    String
  dateYmd   String               // YYYY-MM-DD (Europe/Istanbul)
  votes     Int      @default(0)
  coin      Coin     @relation(fields: [coinId], references: [id])
  createdAt DateTime @default(now())

  @@unique([coinId, dateYmd])
  @@index([dateYmd])
}

model CoinRequest {
  id           String        @id @default(uuid())
  name         String
  symbol       String
  chainKind    ChainKind
  address      String?       // kullanıcı isteğinde opsiyonel
  logoURI      String?       // URL
  notes        String?
  status       RequestStatus @default(PENDING)

  requesterIp  String?
  requesterUa  String?

  createdAt    DateTime      @default(now())
  reviewedAt   DateTime?
  reviewerNote String?

  @@index([status, createdAt])
}
